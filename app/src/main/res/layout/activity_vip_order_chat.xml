<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VipOrderChatActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageButton-->
<!--            android:id="@+id/buttonBack"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:background="@null"-->
<!--            android:padding="8dp"-->
<!--            android:src="@drawable/back_icon" />-->

        <TextView
            android:id="@+id/textViewTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="写留言"
            android:textSize="18sp"
            android:padding="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDesignerAvatar"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textViewDesignerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="27sp"
                android:gravity="left"
                android:layout_marginHorizontal="7dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonShijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#f5f5f9"
                android:text="穿着时间"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/buttonDidian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#f5f5f9"
                android:text="穿着地点"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/buttonChanghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#f5f5f9"
                android:text="穿着场合"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/buttonBeizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#f5f5f9"
                android:text="其他备注"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextToDesigner"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="top|left"
            android:background="@drawable/vip_rounded_edittext_background"
            android:hint=" 快把想说的告诉搭配师吧"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textMultiLine" />

        <CheckBox
            android:id="@+id/checkBoxToCheckWardrobe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否允许查看衣柜"
            android:textColor="#7f7f8c"
            android:layout_marginHorizontal="5dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="15dp"
            android:text="确定" />
    </RelativeLayout>

</LinearLayout>