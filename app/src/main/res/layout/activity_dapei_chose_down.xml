<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_border1"
    android:backgroundTint="@color/bgcolorgray"
    android:padding="8dp"
    tools:context=".Dapei_ChoseUp_Activity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="212dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="下装/连身装"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ImgScroll"
        android:layout_width="378dp"
        android:layout_height="586dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/bgcolorgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choseBtn"
        android:layout_width="310dp"
        android:layout_height="37dp"
        android:background="@drawable/radius_border1"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgScroll" />
</androidx.constraintlayout.widget.ConstraintLayout>