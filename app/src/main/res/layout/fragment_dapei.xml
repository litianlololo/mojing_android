<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_dapei">


            <!-- "打分"文本和文本输入框 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view2"
            android:layout_width="295dp"
            android:layout_height="562dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="@color/bgcolorgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/img_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="@color/bgcolorgray"
            android:src="@drawable/dapei_album"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ImgBtn_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="208dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/image_jacket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ImgBtn_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/image_trousers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImgBtn_1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/radius_border2"
            android:backgroundTint="#95BFBEBE"
            android:gravity="center"
            android:text="评分"
            app:layout_constraintBottom_toTopOf="@+id/ImgBtn_1"
            app:layout_constraintStart_toEndOf="@+id/scoreText"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="分"
            app:layout_constraintBottom_toTopOf="@+id/ImgBtn_1"
            app:layout_constraintStart_toEndOf="@+id/scoreText"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.526" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="142dp"
            android:layout_height="77dp"
            android:gravity="right"
            android:text="0"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/ImgBtn_1"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/changjingBtn"
            android:layout_width="61dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="@color/bgcolorgray"
            android:gravity="center"
            android:text="场景"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="#BFBEBE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AutoBtn"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:text="自动"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PerBtn"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_border1"
            android:backgroundTint="#36BFBEBE"
            android:gravity="center"
            android:text="个人"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="@+id/textView18"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="116dp"
            android:src="@drawable/icon_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/icon_download"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView20" />

        <ImageView
            android:id="@+id/refreshBtn"
            android:layout_width="40dp"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_refresh"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/view2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>