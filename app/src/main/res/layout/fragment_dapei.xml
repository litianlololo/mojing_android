<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_dapei">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 第一排布局 -->
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- "打分"文本和文本输入框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打分" />

            <EditText
                android:id="@+id/score_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入打分" />

            <!-- "搭配相册"图片按钮 -->
            <ImageButton
                android:id="@+id/img_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picture_24" />

        </LinearLayout>

        <!-- 第二排布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <!-- 分享按钮 -->

            <!-- 选择上衣和选择下装按钮 -->
            <Button
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ImgBtn_1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/navbar_icon_home_default" />

                <ImageButton
                    android:id="@+id/ImgBtn_2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/navbar_icon_home_default_1" />

            </LinearLayout>

            <!-- 保存到相册和自动搭配按钮 -->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/folder_download_24" />

                <ImageButton
                    android:id="@+id/AI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ai" />

            </LinearLayout>

        </LinearLayout>

        <!-- 第三排布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/TagBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="140dp"
                android:text="添加标签" />
        </LinearLayout>
